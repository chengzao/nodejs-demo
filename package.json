{
  "name": "@chengzao/nodejs",
  "version": "1.0.0",
  "scripts": {
    "test": "jest ./jest",
    "test:watch": "jest ./jest --watchAll",
    "build": "babel es6 -d lib",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "release": "standard-version",
    "commit": "npx git-cz"
  },
  "collectCoverage": true,
  "coverageReporters": [
    "json",
    "html",
    "text"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "cheerio": "^0.22.0",
    "colors": "^1.3.0",
    "express": "^4.16.3",
    "gulp": "^3.9.1",
    "gulp-tinypng-nokey": "^1.1.0",
    "iconv-lite": "^0.4.21",
    "jest": "^23.6.0",
    "markdown-it": "^8.4.1",
    "request": "^2.85.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "standard-version": "^4.4.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "lodash": "^4.17.11",
    "nodemon": "^1.19.0",
    "puppeteer": "^1.16.0",
    "ramda": "^0.25.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
